---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, date, category } = Astro.props;
---

<html lang="ko">
  <head>
    <BaseHead title={title} description={title} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        font-family: var(--font-logo);
        margin: 0 0 0.5em 0;
      }
      .meta {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .category {
        background-color: var(--accent);
        color: white;
        padding: 0.2em 0.5em;
        border-radius: 4px;
        font-size: 0.8em;
        margin-right: 0.5em;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <div class="meta">
              <span class="category">{category}</span>
              <FormattedDate date={date} />
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
