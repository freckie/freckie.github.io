---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import SeriesNav from '../components/SeriesNav.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, date, category, series } = Astro.props;
---

<html lang="ko">
  <head>
    <BaseHead title={title} description={title} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .meta {
        margin-bottom: 1.2rem;
        color: rgb(var(--gray));
      }
      .category {
        background-color: var(--accent);
        color: white;
        padding: 0.2em 0.5em;
        border-radius: 4px;
        font-size: 0.8em;
        margin-right: 0.5em;
      }
      .utterances-container {
        margin-top: 3rem;
      }
      .prose img {
        cursor: zoom-in;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <div class="meta">
              <span class="category">{category}</span>
              <FormattedDate date={date} />
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          {series && <SeriesNav series={series} />}
          <slot />
          <div class="utterances-container">
            <script
              src="https://utteranc.es/client.js"
              repo="freckie/freckie.github.io"
              issue-term="pathname"
              theme="github-light"
              crossorigin="anonymous"
              async
            ></script>
          </div>
        </div>
      </article>
    </main>
    <Footer />
    <script>
      import mediumZoom from 'medium-zoom';

      // Image zoom
      mediumZoom('.prose img', {
        margin: 24,
        background: 'rgba(0, 0, 0, 0.9)',
      });

      // Transform footnote numbers to [n] format with backref links
      const footnotes = document.querySelectorAll('.footnotes ol li');
      footnotes.forEach((li, index) => {
        const num = index + 1;
        const backrefLink = li.querySelector('a[data-footnote-backref]');
        if (backrefLink) {
          const href = backrefLink.getAttribute('href');
          const numberLink = document.createElement('a');
          numberLink.href = href;
          numberLink.className = 'footnote-number';
          numberLink.textContent = `[${num}]`;
          li.insertBefore(numberLink, li.firstChild);
        }
      });
    </script>
  </body>
</html>
