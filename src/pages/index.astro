---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const categories = [...new Set(posts.map(post => post.data.category))];
---

<!doctype html>
<html lang="ko">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 2em 1em;
      }
      .hero {
        text-align: center;
        margin-bottom: 2em;
      }
      .blog-title {
        font-family: var(--font-logo);
        font-size: 2.5em;
        font-weight: 600;
        margin: 0 0 1em 0;
        color: rgb(var(--black));
      }
      .author-section {
        display: flex;
        align-items: center;
        gap: 1em;
        padding: 1em;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(var(--gray), 10%);
        margin-bottom: 1.5em;
      }
      .avatar {
        width: 72px;
        height: 72px;
        border-radius: 50%;
        flex-shrink: 0;
      }
      .author-info {
        text-align: left;
      }
      .author-name {
        font-size: 0.9rem;
        color: rgb(var(--gray));
        margin: 0 0 0.25em 0;
      }
      .author-name a {
        color: rgb(var(--black));
        font-weight: 600;
        text-decoration: none;
      }
      .author-name a:hover {
        color: var(--accent);
      }
      .author-bio {
        font-size: 1rem;
        color: rgb(var(--gray-dark));
        margin: 0 0 0.5em 0;
      }
      .social-links {
        display: flex;
        gap: 0.75em;
      }
      .social-links a {
        color: rgb(var(--gray));
        transition: color 0.2s;
      }
      .social-links a:hover {
        color: var(--accent);
      }
      .social-links svg {
        width: 20px;
        height: 20px;
      }
      .category-filter {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5em;
        justify-content: center;
        margin-bottom: 2em;
        padding-bottom: 1em;
        border-bottom: 1px solid rgb(var(--gray-light));
      }
      .category-btn {
        padding: 0.4em 0.8em;
        border: 1px solid rgb(var(--gray-light));
        border-radius: 20px;
        background: white;
        color: rgb(var(--gray));
        font-size: 0.875rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
      }
      .category-btn:hover,
      .category-btn.active {
        border-color: var(--accent);
        color: var(--accent);
      }
      .category-btn.active {
        background-color: var(--accent);
        color: white;
      }
      ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      ul li {
        margin-bottom: 1.5em;
        padding-bottom: 1.5em;
        border-bottom: 1px solid rgb(var(--gray-light));
      }
      ul li:last-child {
        border-bottom: none;
      }
      ul li a {
        text-decoration: none;
      }
      .post-title {
        font-family: var(--font-logo);
        font-size: 1.25rem;
        font-weight: 600;
        color: rgb(var(--black));
        margin: 0;
      }
      .post-title:hover {
        color: var(--accent);
      }
      .post-meta {
        color: rgb(var(--gray));
        font-size: 0.875rem;
        margin-top: 0.5em;
      }
      .category {
        background-color: var(--accent);
        color: white;
        padding: 0.2em 0.5em;
        border-radius: 4px;
        font-size: 0.75em;
        margin-right: 0.5em;
      }
    </style>
  </head>
  <body>
    <Header hideTitle={true} />
    <main>
      <section class="hero">
        <h1 class="blog-title">{SITE_TITLE}</h1>
        <div class="author-section">
          <img
            class="avatar"
            src="https://github.com/freckie.png"
            alt="Freckie"
          />
          <div class="author-info">
            <p class="author-name">Written by <a href="/about">@Freckie</a></p>
            <p class="author-bio">깃허브 스타될거야.</p>
            <div class="social-links">
              <a href="https://github.com/freckie" target="_blank" title="GitHub">
                <svg viewBox="0 0 16 16" fill="currentColor">
                  <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                </svg>
              </a>
              <a href="https://linkedin.com/in/freckie" target="_blank" title="LinkedIn">
                <svg viewBox="0 0 16 16" fill="currentColor">
                  <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                </svg>
              </a>
              <a href="mailto:freckie@frec.kr" title="Email">
                <svg viewBox="0 0 16 16" fill="currentColor">
                  <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>

      <div class="category-filter">
        <button class="category-btn active" data-category="all">All</button>
        {categories.map((category) => (
          <button class="category-btn" data-category={category}>{category}</button>
        ))}
      </div>

      <section>
        <ul id="posts-list">
          {posts.map((post) => (
            <li data-category={post.data.category}>
              <a href={`/${post.id}/`}>
                <h4 class="post-title">{post.data.title}</h4>
              </a>
              <p class="post-meta">
                <span class="category">{post.data.category}</span>
                <FormattedDate date={post.data.date} />
              </p>
            </li>
          ))}
        </ul>
      </section>
    </main>
    <Footer />

    <script>
      const categoryButtons = document.querySelectorAll('.category-btn');
      const postItems = document.querySelectorAll('#posts-list li');

      categoryButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          categoryButtons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');

          const category = btn.dataset.category;

          postItems.forEach(item => {
            if (category === 'all' || item.dataset.category === category) {
              (item as HTMLElement).style.display = '';
            } else {
              (item as HTMLElement).style.display = 'none';
            }
          });
        });
      });
    </script>
  </body>
</html>
